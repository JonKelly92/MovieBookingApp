<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieBookingsApp.Bookings"
             xmlns:namespace="clr-namespace:MovieBookingsApp"
             x:DataType="namespace:Bookings_ViewModel"
             Title="{Binding Title}">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Bookings}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="namespace:Screening">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding ID, Mode=OneWay}" />
                            <Label Text="{Binding FilmID, Mode=OneWay}" />
                            <Label Text="{Binding RoomID, Mode=OneWay}" />
                            <Label Text="{Binding StartTime, StringFormat='{0:MMM d, h:mmtt}', Mode=OneWay}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>