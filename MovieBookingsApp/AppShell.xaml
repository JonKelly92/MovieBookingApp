<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieBookingsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieBookingsApp"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent Title="Get Tickets"
                    ContentTemplate="{DataTemplate local:GetTickets}" />
        <ShellContent Title="Bookings"
                    ContentTemplate="{DataTemplate local:Bookings}" />
        <ShellContent Title="Sign Up"
                    ContentTemplate="{DataTemplate local:SignUp}" />
        <ShellContent Title="Account"
                    ContentTemplate="{DataTemplate local:Account}" />
    </TabBar>
</Shell>
